<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.forcewave.safety.dao.SafetyDAO">
	
	<select id="selectSafetyList" resultType="kr.or.forcewave.safety.vo.SafetyVO">
		SELECT
			GID
			, SAFETY_SORT
			, SAFETY_GUBUN
			, SAFETY_CODE
			, SAFETY_NM
			, SAFETY_ADDR
			, SAFETY_EMD
			<!-- , ST_X(GEOM) AS SAFETY_LON
			, ST_Y(GEOM) AS SAFETY_LAT -->
			, SAFETY_LON
			, SAFETY_LAT
			, SAFETY_X
			, SAFETY_Y
		FROM SAFETY
		ORDER BY 1 DESC
	</select>
	
	<select id="selectSafetySortList" parameterType="String" resultType="kr.or.forcewave.safety.vo.SafetyVO">
		SELECT
			GID
			, SAFETY_SORT
			, SAFETY_GUBUN
			, SAFETY_CODE
			, SAFETY_NM
			, SAFETY_ADDR
			, SAFETY_EMD
			, SAFETY_LON
			, SAFETY_LAT
			, SAFETY_X
			, SAFETY_Y
		FROM SAFETY
		WHERE SAFETY_SORT = #{sort}
		ORDER BY 1 DESC
	</select>

	<select id="selectSafety" parameterType="int" resultType="kr.or.forcewave.safety.vo.SafetyVO">
		SELECT
			GID
			, SAFETY_SORT
			, SAFETY_GUBUN
			, SAFETY_CODE
			, SAFETY_NM
			, SAFETY_ADDR
			, SAFETY_EMD
			, SAFETY_LON
			, SAFETY_LAT
			, SAFETY_X
			, SAFETY_Y
		FROM SAFETY
		WHERE GID = #{gid}
	</select>

	<insert id="InsertSafety" parameterType="kr.or.forcewave.safety.vo.SafetyVO">
		<selectKey order="BEFORE" resultType="int" keyProperty="gid">
			SELECT	MAX(GID) + 1
			FROM SAFETY
		</selectKey>
		INSERT INTO SAFETY (
			GID
			, SAFETY_SORT
			, SAFETY_GUBUN
			, SAFETY_CODE
			, SAFETY_NM
			, SAFETY_ADDR
			, SAFETY_EMD
			, SAFETY_LON
			, SAFETY_LAT
			, SAFETY_X
			, SAFETY_Y
			, GEOM
			 st_geomfromtext('POINT(127.32132 37.34567)', 4326))
		) VALUES (
			#{gid}
			, #{safetySort}
			, #{safetyGubun}
			, #{safetyCode}
			, #{safetyNm}
			, #{safetyAddr}
			, #{safetyEmd}
			, #{safetyLon}
			, #{safetyLat}
			, #{safetyX}
			, #{safetyY}
			, ST_GEOMFROMTEXT('POINT(#{safetyX} #{safetyY})', 3857))
		) 
	</insert>
	
	<update id="UpdateSafety" parameterType="kr.or.forcewave.safety.vo.SafetyVO">
		UPDATE SAFETY
			SET
				SAFETY_SORT    = #{safetySort}
				, SAFETY_GUBUN = #{safetyGubun}
				, SAFETY_CODE  = #{safetyCode}
				, SAFETY_NM    = #{safetyNm}
				, SAFETY_ADDR  = #{safetyAddr}
				, SAFETY_EMD   = #{safetyEmd}
				, SAFETY_LON   = #{safetyLon}
				, SAFETY_LAT   = #{safetyLat}
				, SAFETY_X     = #{safetyX}
				, SAFETY_Y     = #{safetyY}
				, GEOM = 
		WHERE GID = #{gid}
	</update>
	
	<delete id="DeleteSafety" parameterType="int">
		DELETE FROM SAFETY
		WHERE GID = #{gid}
	</delete>
</mapper>